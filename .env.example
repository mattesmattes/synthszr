# =============================================================================
# Synthszr Environment Variables
# Copy this file to .env.local and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Supabase (Required)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# -----------------------------------------------------------------------------
# Authentication (Required)
# -----------------------------------------------------------------------------
# Password for admin login (legacy, use Google OAuth instead)
ADMIN_PASSWORD=your-secure-password

# JWT secret for session tokens (defaults to ADMIN_PASSWORD if not set)
JWT_SECRET=your-jwt-secret

# Comma-separated list of allowed admin emails for Google OAuth
ADMIN_EMAILS=admin@example.com,another@example.com

# Google OAuth (for admin authentication)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# -----------------------------------------------------------------------------
# AI Services (At least one required)
# -----------------------------------------------------------------------------
# Anthropic Claude (for analysis, synthesis, ghostwriter)
ANTHROPIC_API_KEY=sk-ant-...

# Google Gemini (for image generation, translations, embeddings)
GOOGLE_GENERATIVE_AI_API_KEY=your-gemini-key

# OpenAI (for stock analysis)
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o  # optional, defaults to gpt-4o

# -----------------------------------------------------------------------------
# Email (Required for newsletter features)
# -----------------------------------------------------------------------------
# Resend for sending emails
RESEND_API_KEY=re_...
RESEND_FROM_EMAIL=Newsletter <newsletter@yourdomain.com>

# -----------------------------------------------------------------------------
# External APIs (Optional)
# -----------------------------------------------------------------------------
# EODHD for real-time stock quotes
EODHD_API_KEY=your-eodhd-key

# Premarket data from glitch.green
STOCKS_API_BASE_URL=https://glitch.green
STOCKS_PREMARKET_API_KEY=your-premarket-key

# -----------------------------------------------------------------------------
# Rate Limiting (Optional - uses in-memory if not set)
# -----------------------------------------------------------------------------
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# Secret for cron job authentication
CRON_SECRET=your-cron-secret

# Encryption key for storing sensitive data (32+ chars)
ENCRYPTION_KEY=your-32-character-encryption-key

# Debug endpoint secret (optional)
DEBUG_LABELS_SECRET=your-debug-secret

# -----------------------------------------------------------------------------
# URLs
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_BASE_URL=https://yourdomain.com

# -----------------------------------------------------------------------------
# Testing (Optional)
# -----------------------------------------------------------------------------
TEST_API_URL=http://localhost:3000
